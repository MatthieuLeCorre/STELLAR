<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky">
  <div class="d-flex align-items-center">
    <a class="navbar-brand" href="<%= root_path %>">
      <%= image_tag "stellar_logo.png", alt: "Stellar logo", width: 200 %>
    </a>
    <%= link_to "Stellar", root_path, class:"nav-link" %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <li><%= link_to "Home", root_path, class:"nav-link" %></li>
      </li>
      <% if current_user %>
        <li class="nav-item">
          <li><%= link_to "Dashboard", dashboard_path, class:"nav-link" %></li>
        </li>
      <% end %>
      <li class="nav-item dropdown">
        <% if current_user %>
          <img class="avatar-large dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <% else %>
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
          Menu
          </button>
        <% end  %>
        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
          <% if current_user %>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class:"dropdown-item" %></li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path, class:"dropdown-item" %></li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
</div>
