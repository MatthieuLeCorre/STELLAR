<h3>Create a new space trip</h3>

<%= simple_form_for [@trip] do |f| %>
  <%= f.input :planet, placeholder: "Where is your trip?" %>
  <%= f.input :description, as: :text, placeholder: "Description of the trip here!" %>
  <%= f.input :gravity, placeholder: "What is the gravity of your planet?" %>
  <%= f.input :exit, as: :boolean, placeholder: "Can you go outside the colony?" %>
  <%= f.input :price_per_night, as: :integer, placeholder: "What's the price per night?"%>
  <%= f.input :transport_price, as: :integer, placeholder: "What's the transport price?"%>
  <%= f.input :spaceship, placeholder: "Which spaceship will transport the visitors?"%>
  <%= f.input :survival, collection: 1..100, prompt: "What's the survival probability?" %>
  <%= f.submit class:"btn btn-flat" %>
<% end %>
